<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.appsters.igit.taxicity.AboutActivity">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="160dp"
          android:orientation="horizontal"
          android:weightSum="3">
          <LinearLayout
              android:padding="5dp"
              android:orientation="vertical"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/saket"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="2dp"/>
              <TextView
                  android:textSize="15sp"
                  android:textColor="@android:color/white"
                  android:textStyle="bold"
                  android:gravity="center_horizontal"
                  android:text="Saket Mohanty"
                  android:layout_width="match_parent"
                  android:layout_height="20dp" />
          </LinearLayout>
          <LinearLayout
              android:padding="5dp"
              android:orientation="vertical"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent">
              <de.hdodenhof.circleimageview.CircleImageView
                  android:layout_width="match_parent"
                  android:layout_height="120dp"
                  android:src="@drawable/ronak"
                  app:civ_border_color="@android:color/white"
                  app:civ_border_width="2dp"/>
              <TextView
                  android:textSize="15sp"
                  android:textColor="@android:color/white"
                  android:textStyle="bold"
                  android:gravity="center_horizontal"
                  android:text="Ronak Thakkar"
                  android:layout_width="match_parent"
                  android:layout_height="20dp" />
          </LinearLayout>
          <LinearLayout
              android:padding="5dp"
              android:orientation="vertical"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent">
              <de.hdodenhof.circleimageview.CircleImageView
                  android:layout_width="match_parent"
                  android:layout_height="120dp"
                  android:src="@drawable/ali"
                  app:civ_border_color="@android:color/white"
                  app:civ_border_width="2dp"/>
              <TextView
                  android:textSize="15sp"
                  android:textColor="@android:color/white"
                  android:textStyle="bold"
                  android:gravity="center_horizontal"
                  android:text="Zainul Ali"
                  android:layout_width="match_parent"
                  android:layout_height="20dp" />
          </LinearLayout>
      </LinearLayout>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="5"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="150dp"
        android:src="@drawable/sukalp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"/>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/FbTheme"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_facebook"
            android:id="@+id/fab_sukalp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sukalp Tripathi"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self Proclaimed Entrepreneur"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/FbTheme"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_facebook"
                android:id="@+id/fab_amlan" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amlan Routray"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TCS Reject"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textAlignment="center" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="150dp"
            android:src="@drawable/amlan"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="5"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="150dp"
            android:src="@drawable/uma"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/FbTheme"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_facebook"
                android:id="@+id/fab_uma" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uma Shankar Nayak"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Knows Copy, Paste Well"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/FbTheme"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_facebook"
                android:id="@+id/fab_himanshu" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Himanshu Samal"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Maker"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="italic"
                />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="150dp"
            android:src="@drawable/himanchoot"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>