<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/acceptPicture" />
            <LinearLayout
                android:layout_weight="5"
                android:padding="10dp"
                android:orientation="vertical" android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/acceptField1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sukalp Tripathi"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/acceptField2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thermal---Aryabhatta Bhawan"
                    android:textColor="@android:color/black"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/acceptField3"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balangir"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/acceptField4"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balangir"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/acceptField5"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29 October 2016"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/acceptField6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept Request"
            android:textColor="@color/com_facebook_blue"
            android:gravity="center"
            android:padding="7dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />
    </LinearLayout>
</android.support.v7.widget.CardView>